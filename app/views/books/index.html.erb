<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">

    <h2>User info</h2>
     <%= image_tag @user.get_profile_image(100,100) %>
     <table class="table">
      <tbody>
        <tr>
         <th>name</th>
         <th><%= @user.name %></th>
        </tr>
        <tr>
         <th>introduction</th>
         <th><%= @user.introduction %></th>
        </tr>

      </tbody>
     </table>

     <%= link_to edit_user_path(@user.id), class:'btn btn-outline-secondary btn-block edit_user_77129' do%>
      <i class="fas fa-user-cog"></i>
      <%end%>


    <h2 class="mt-3">New book</h2>
     <%= form_with model: @book do |f| %>

     <div class="form-group">
      <p>Title</p>
       <%= f.text_field :title %>
      </div>

     <div class="form-group">
      <p>Opinion</p>
        <%= f.text_area :body %>
     </div>

     <div>
       <%= f.submit 'Create Book', class: 'btn btn-success' %>
     </div>
     <% end %>
   </div>

   <div class="col-md-8 offset-md-1">
     <h2>Books</h2>

    <table class="table table-hover table-inverse">
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
       </tr>
       <% @books.each do |book| %>
       <tr>
         <td><%= image_tag book.user.get_profile_image(100,100) %></td>
         <td><%= book.title %></td>
         <td><%= book.body %></td>
       </tr>
       <%end%>
    </table>
   </div>

 </div>
 </div>