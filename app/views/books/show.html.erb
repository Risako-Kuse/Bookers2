<%= render 'list', book: @book_new, user: @user %>

   <div class="col-md-8 offset-md-1">
     <h2>Book detail</h2>

    <table class="table table-hover table-inverse">

       <tr>
         <td><%= link_to user_path(@user.id) do %><%= image_tag @user.get_image(100,100) %><br><%= @user.name %><%end%></td>
         <td>
         <%= link_to @book.title, book_path(@book.id) %>
          </td>
         <td><%= @book.body %></td>

         <% if @user == current_user %>
         <td><%= link_to "Edit", edit_book_path(@book.id), class: 'btn btn-sm btn-success edit_book_58920' %></td>
         <td><%= link_to 'Destroy', book_path(@book.id), method: :delete,  class: 'btn btn-sm btn-danger destroy_book_58920', "data-confirm" => "本当に消しますか？"%></td>
         <%end%>
       </tr>
    </table>
   </div>

 </div>
 </div>